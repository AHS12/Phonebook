<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mdazizulhakim.phonebook.EditContact">

    <Button
        android:text="Update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_update"
        android:background="@drawable/custom_border"
        android:layout_marginLeft="116dp"
        android:layout_marginStart="116dp"
        android:layout_alignTop="@+id/etxt_email_up"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="72dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:inputType="phone"
        android:cursorVisible="false"
        android:ems="10"
        android:id="@+id/etxt_phone_up"
        android:layout_above="@+id/etxt_email_up"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
       android:background="@drawable/border" />

    <EditText
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp"
        android:cursorVisible="false"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/etxt_email_up"
        android:background="@drawable/border"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:cursorVisible="false"
        android:ems="10"
        android:id="@+id/etxt_name_up"
        android:background="@drawable/border"
        android:gravity="center"
        android:layout_height="50dp"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/etxt_phone_up"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Edit Information of Contact"
        android:background="@drawable/border_text"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
